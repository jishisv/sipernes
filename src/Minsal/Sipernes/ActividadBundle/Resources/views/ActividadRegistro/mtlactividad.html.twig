{% block sonata_admin_content -%}

<center>
    <h1>Registro de actividad a paciente</h1>
    <form name="preparar" id="preparar" action="{#{{admin.generateObjectUrl('edit', entity)}}#}" method="post" class="form-vertical">
         <table class="table table-bordered ">
                <tbody>
                    <tr>
                        <td colspan="4" id="titulo_parametro" class="sonata-ba-list-field-header"><strong>Opciones de Contenido</strong></td>
                    </tr>
                    <tr>
                <div id="divdomreg">

                </div>  
                <td class=""><strong>Fecha de Actividad:</strong></td>
                <td>{{ form_widget(form.fechaModificacionAct) }}</td>
                </tr>
                </div>  
                <td class=""><strong>Código de Enfermera:</strong></td>
                {#<td><input id="codigo_enfermera" name="codigo_enfermera" type="text" class="fecha obligatorio" /></td>#}
                <td><label >{{ form_widget(form.idEmpCorr) }}</label></td>
                </tr>
                </div>  
                <td class=""><strong>Código de Paciente:</strong></td>
{#                <td><input id="codigo_paciente" name="codigo_paciente" type="text" class="fecha obligatorio" /></td>#}
                <td><label >{{ form_widget(form.idExpediente) }}</label></td>
                </tr>
                <tr>
                    <td class="" ><strong>Tipo de Actividad:</strong></td>
                    <td colspan="3" ><select id="deptos" name="deptos">
                            <option></option>
                        </select></td>                   
                </tr>

                <tr>
                    <<td class="" ><strong>Actividad:</strong></td>
                    {#<td> {{ form_widget(form.idSubactividad) }}</td>#}
                    <td colspan="3" ><select id="municipios" name="municipios" >
                            <option selected="true">Seleccione..</option>
                      
                        </select></td>       
                </tr>
                </div>  
                <td class=""><strong>Tiempo:</strong></td>
                <td>{{ form_widget(form.tiempoActEnf) }}</td>
                {#                <td><input id="tiempo_minutos" name="tiempo_minutos" type="text" class="fecha obligatorio" />Minutos</td> #}
                </tr>
                </tbody>
            </table>

            <table>
                
                <button type="submit" class="btn btn-success" name="btn_create"><i class="fa fa-plus-circle"></i> {{ 'btn_create'|trans({}, 'SonataAdminBundle') }}</button>
                
                <tr>
                    <td colspan="2">
                <div class="pull-right">
{#            <a  class="btn btn-info" href="{{ admin.generateObjectUrl('edit', entity) }}">#}
            <a  class="btn btn-info" href="">
               <span class="glyphicon glyphicon-floppy-saved"></span> Guardar          
            </a>
             </div> 
                </td>
                <td colspan="2">
                <div class="pull-right">
            <a  class="btn btn-info" href="">
               <span class="glyphicon glyphicon-remove"></span> Cancelar          
            </a>
             </div> 
                </td>
                </tr>
            </table>
{#            </tr>#}
            </tbody>
        </table>
